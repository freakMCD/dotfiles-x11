#!/bin/bash
# Sync Files from Linux to android
 
screenshots() {
   cd ~/Pictures/screenshots/
   lftp ftp://192.168.1.3:2121 -e "
   cd Pictures;
   mirror -R --use-pget-n=5 --parallel=5 --delete-first --only-missing --no-recursion;
   bye"   
}

music() {
   cd ~/Music/2015-2022/
   lftp ftp://192.168.1.3:2121 -e "
   cd Music;
   mirror -R --use-pget-n=5 --parallel=5 --no-recursion --delete-first --ignore-time --only-missing -v;
   #bye"
}

PS3='Please enter your number choice: '
options=("screenshots" "music" "Quit")
select opt in "${options[@]}"
do
    case $opt in
        "screenshots")
            screenshots
            ;;
        "music")
            music
            ;;
        "Quit")
            break
            ;;
        *) echo "invalid option $REPLY";;
    esac
read -p "Press Enter to continue"
break
done
