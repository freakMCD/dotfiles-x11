#!/bin/bash
# Update apps that are not in fedora repos
 
streamlink() {
    pip install --user --upgrade streamlink
}

ttvlol() {
    INSTALL_DIR="${XDG_DATA_HOME:-${HOME}/.local/share}/streamlink/plugins"; mkdir -p "$INSTALL_DIR"; curl -L -o "$INSTALL_DIR"/twitch.py 'https://github.com/2bc4/streamlink-ttvlol/releases/latest/download/twitch.py'
}

trans() {
    wget -O ~/bin/trans git.io/trans && chmod +x ~/bin/trans
}

animdl() {
    pip install --user --upgrade animdl 
}

yt-dlp() {
    pip install --user --upgrade yt-dlp
}

PS3='Please enter your number choice: '
options=("streamlink" "ttvlol" "trans" "animdl" "yt-dlp" "Quit")
select opt in "${options[@]}"
do
    case $opt in
        "streamlink")
            streamlink
            ;;
        "ttvlol")
            ttvlol
            ;;
        "trans")
            trans
            ;;
        "animdl")
            animdl
            ;;
        "yt-dlp")
            yt-dlp
            ;;
        "Quit")
            break
            ;;
        *) echo "invalid option $REPLY";;
    esac
read -p "Press Enter to continue"
break
done
