# vim: set filetype=conf :
max-items 50
browser qutebrowser
cleanup-on-quit yes
confirm-mark-all-feeds-read no
prepopulate-query-feeds yes
reload-threads 16
notify-format "%n unread articles"
notify-program "~/.config/newsboat/newsnotif.sh"
notify-always yes
auto-reload yes
reload-time 180


macro m set browser "nohup mpv %u >/dev/null 2>&1 &"; open-in-browser-and-mark-read; set browser qutebrowser;
macro s set browser "nohup streamlink --player-passthrough=hls %u >/dev/null 2>&1 &"; open-in-browser-and-mark-read; set browser qutebrowser;



# Bindings
bind-key o open-in-browser-and-mark-read


ignore-article "https://raw.githubusercontent.com/ArjixWasTaken/anime-rss/main/animepahe/animepahe-rss.xml" "title !~ \"Blue Lock|Spy x Family|One Piece\""
ignore-article "https://yewtu.be/feed/channel/UC5uNya42ayhsRnZOR3mO6NA" "title =~ \"phasmophobia\""



### Theme ###

color listnormal default default
color listfocus color10 black reverse
color listnormal_unread default default bold
color listfocus_unread default default bold underline
color info red black bold
color article default default

#highlights
highlight article "^(Feed|Title|Link|Date|Author):.*$" color12 color0
highlight article "https?://[^ ]+" color13 color0 protect

highlight feedlist "[║│]" yellow default bold
highlight feedlist "╠═.*" yellow default bold

highlight feedlist "\\(Youtube\\) .*" red
highlight feedlist "\\(Blog\\) .*" cyan
#highlight feedlist "\\(Reddit\\) .*" color166 

feedlist-format "%?T?║ %n%8u (%T) %t &╠═════════════════════════════════════════════════════%t?"

articlelist-format  "%4i %f %D   %?T?|%-17T|  ?%t"

