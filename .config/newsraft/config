# General
set scrolloff 5
set initial-unread-first-sorting true

# Bindings

bind m mark-read; exec nohup umpv "%l" >/dev/null 2>&1 &
bind q navigate-back
set open-in-browser-command qutebrowser "%l" >/dev/null 2>&1 &exit

# Format
set menu-item-entry-format " %u │ %o"
set menu-explore-item-entry-format " %u │ %-20.20O │ %o"

# Colors
# Section listing
set color-list-section-fg blue bold
set color-list-section-unread-fg red bold italic

# Within the feeds comprising a section
set color-list-feed-fg green
set color-list-feed-unread-fg magenta italic

# Individual posts
set color-list-item-fg white
set color-list-item-unread-fg default bold italic

set color-list-item-important-fg yellow

