# General rebindings

# Vim like binds
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry

# navigation settings
bind index,pager g noop
macro index,pager gi "<change-folder>=INBOX<enter>" "go to INBOX"
macro index,pager gp "<change-folder>=[Gmail].Importantes<enter>" "go to im[p]ortante"
macro index,pager ge "<change-folder>=[Gmail].Enviados<enter>" "go to Enviados"
macro index,pager gd "<change-folder>=[Gmail].Destacados<enter>" "go to Destacados"
macro index,pager gs "<change-folder>=[Gmail].Spam<enter>" "go to Spam"

# synchronization settings ['s' to sync]
macro index S "<shell-escape>mbsync -V gmail<enter>" "sync email"

# sidebar
bind index,pager \Ck sidebar-prev
bind index,pager \Cj sidebar-next
bind index,pager \Cl sidebar-open
bind index,pager b sidebar-toggle-visible

macro index,pager B "<view-attachments><search>html<enter><view-mailcap><exit><exit>"
