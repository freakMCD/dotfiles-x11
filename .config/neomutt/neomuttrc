source ~/.config/neomutt/colors
source ~/.config/neomutt/mappings

set from = "vastagox@gmail.com"
set real_name = "Edwin Velarde"

set mbox_type = Maildir
set folder = "~/.local/share/email/gmail"

set sendmail = "msmtp -C $HOME/.config/neomutt/.msmtprc -a gmail"

# cache settings
set header_cache = "~/.cache/mutt/gmail/header_cache"
set message_cachedir = "~/.cache/mutt/gmail/message_cache"

# mailbox settings
set spool_file = +INBOX
set postponed = +Drafts 
set trash = +Trash
unset record

mailboxes +INBOX +[Gmail].Destacados +[Gmail].Spam

## Generic
set mailcap_path="~/.config/neomutt/mailcap"
set markers = no # Disables the `+` displayed at line wraps
set pager_stop=yes
set sort = threads
set sort_aux = reverse-last-date-received 
set quit=ask-yes
set thorough_search
unset mark_old
unset record
unset wait_key


set editor=`echo \$EDITOR`
set new_mail_command="notify-send 'Neomutt' '%n new emails' -t 0"

alternative_order text/plain text text/html #prefer plaintext over dumped html

# Index page format. Default "%4C %Z %{%b %d} %-15.15L (%?l?%4l&%4c?) %s"
set index_format="%zs  %-20.20F %s %*   %[%d %b] "
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Sidebar
set sidebar_width=20
set nohelp

# Status Bar -----------------------------------------
set status_chars  = " *%A"


