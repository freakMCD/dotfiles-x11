# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
	output_format= "i3bar"
	interval = 5
	markup = pango
}

order += "volume master"
order += "ethernet _first_"
order += "disk /"
order += "memory"
order += "tztime local"


volume master {
				format = " <span color='#4a87b2'>墳</span> %volume"
        format_muted = " muted (%volume)"
        device = "pulse"
}

ethernet _first_ {
        format_up = "   %ip"
        format_down = "E: down"
}

disk "/" {
        format = " <span color='#4a87b2'></span>  %avail"
}

memory {
        format = " <span color='#4a87b2'></span>  %used/%total"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

tztime local {
        format = " <span color='#4a87b2'></span>  %a %d/%m %R  "
}

