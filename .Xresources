#include ".cache/wal/colors.Xresources"

!Font
URxvt.font:xft:JetBrainsMono Nerd Font Mono:pixelsize=14
URxvt.boldFont:xft:JetBrainsMono Nerd Font Mono:pixelsize=14:style=bold

Xft.hintstyle:	hintslight
Xft.hinting: 1
Xft.antialias:1

!Font Spacing
URxvt.letterSpace: -1
URxvt.lineSpace: 0

!General Settings
URxvt*saveLines: 5000
URxvt*scrollBar: false
URxvt*scrollBar_right: false
URxvt*urgentOnBell: true
URxvt*iso14755: false

!Extensions
URxvt.perl-ext-common: default,matcher,-confirm-paste
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: C-1

!Colored links
URxvt.matcher.rend.0: Uline Bold fg12 

