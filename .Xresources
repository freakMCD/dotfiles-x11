#include ".cache/wal/colors.Xresources"

!Font
URxvt.font:xft:JetBrainsMono Nerd Font Mono:pixelsize=14,xft:Symbola
URxvt.boldFont:xft:JetBrainsMono Nerd Font Mono:pixelsize=14:style=bold,xft:Symbola

Xft.antialias: true
Xft.hinting: true
Xft.hintstyle:	hintslight

!Font Spacing
URxvt.letterSpace: -1
URxvt.lineSpace: 0

!General Settings
URxvt*saveLines: 8192
URxvt*scrollBar: false
URxvt*scrollBar_right: false
URxvt*urgentOnBell: true
URxvt*iso14755: false

!Extensions
URxvt.perl-ext-common: default,matcher,-confirm-paste
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: C-1

!Colored links
URxvt.matcher.rend.0: Uline Bold fg12 

